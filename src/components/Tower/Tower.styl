.tower
    display: block
    position: relative
    top: 50%
    left: 50%
    margin-left: 5px
    margin-top: 5px
    border-radius: 50%
    border: 1px solid black
    box-sizing: border-box
    transition: all .5s cubic-bezier(0.77, 0, 0.175, 1)

.tower--selected
    transform: scale(1.2)

.tower--active
    border-width: 4px

.tower--active:hover
    transform: scale(1.2)
    border-width: 4px

.tower--player0::after    
    content: 'X'
    font-family: Arial
    font-size: 21px
    display: block
    position: absolute
    left: 50%
    top: 50%
    margin-left: -7px
    margin-top: -11px